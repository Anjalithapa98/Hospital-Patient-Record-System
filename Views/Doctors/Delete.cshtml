@model HospitalPatientSystem.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}

<h1>Delete Doctor</h1>

<h4>Are you sure you want to delete this doctor?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Specialization)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Specialization)
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
